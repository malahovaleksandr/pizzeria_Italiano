.main-content__block
    .block__item-photo
        a(href="")
            img(src="image/pizza/11_slivochnaya_small.png" alt="pizza-slivochaya")
    .block__item-title
        |СЛИВОЧНАЯ
    .block__item-description.
        ветчина, ароматные грибочки, сливки
    .block__item-size
        form(name="form-size-pizza", method="post")

                input(type="radio", value="30", name="add", id="30-cmpizza-slivochaya", checked="checked")
                label(for="30-cmpizza-slivochaya").item-size_label
                    | d 30 см
                input(type="radio", value="40", name="add",id="40-cmpizza-slivochaya")
                label(for="40-cmpizza-slivochaya").item-size_label
                    | d 40 см

    .block__item-buy
        .block__item-price
            .price_numbers 479
            svg.svg-rubl
               use(xlink:href="image/sprite.svg#icon--znac_publy")
        .block__item-basket
            .basket-block.button-left
                |В корзину
